using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Text;
using System.Windows.Forms;

namespace VoidMetod
{
    public partial class Form3 : Form
    {
        public Form3()
        {
            InitializeComponent();
        }

        private void button1_Click(object sender, EventArgs e)
        {

            textBox3.Clear();

            string letter = (string)textBox1.Text;
            if (!int.TryParse(textBox2.Text, out int size)) size = 0;

            if (radioButton1.Checked)
            {
                
                textBox3.Text = Triangle1(letter, size); //Value
            }
            else if (radioButton2.Checked)
            {

                textBox3.Text = Triangle2(letter); //Optional

            }
            else if (radioButton3.Checked)
            {

                Triangle3(letter, size, out string result);
                textBox3.Text = result; //Outout

            }
            else
            {
               MessageBox.Show("กรุณาเลือกประเภท");
            }          


        }

        //Value
        private string Triangle1(string letter, int size)
        {
            string result = "";

            for (int i = 1; i <= size; i++)
            {
                for (int j = 1; j <= i; j++)
                {
                    result += letter;
                }
                result += Environment.NewLine;
            }

            return result;
        }

        //Value

        //Optional
        private string Triangle2(string letter, int size = 5)
        {
            size = textBox2.TextLength > 0 && int.TryParse(textBox2.Text, out int s) ? s : 5;
            string res = "";
            for (int i = 1; i <= size; i++)
            {
                res += new string(letter[0], i) + Environment.NewLine;
            }
            return res;
        }

        //Optional

        //Outout
        private void Triangle3(string letter, int size, out string result)
        {
            StringBuilder sb = new StringBuilder();
            for (int i = 1; i <= size; i++)
            {
                sb.AppendLine(new string(letter[0], i));
            }
            result = sb.ToString(); 
        }

        //Outout
    }
}
